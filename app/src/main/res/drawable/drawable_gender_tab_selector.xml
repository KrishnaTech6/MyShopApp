<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorOrange2"/>
            <corners
                android:bottomLeftRadius="@dimen/radio_btn_corner_rds"
                android:bottomRightRadius="@dimen/radio_btn_corner_rds"
                android:topLeftRadius="@dimen/radio_btn_corner_rds"
                android:topRightRadius="@dimen/radio_btn_corner_rds"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle" >
            <stroke android:background="@color/colorSecondaryText"
                android:width="1dp"/>
            <corners
                android:bottomLeftRadius="@dimen/radio_btn_corner_rds"
                android:bottomRightRadius="@dimen/radio_btn_corner_rds"
                android:topLeftRadius="@dimen/radio_btn_corner_rds"
                android:topRightRadius="@dimen/radio_btn_corner_rds"/>
        </shape>
    </item>

</selector>