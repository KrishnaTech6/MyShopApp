<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorImageBackgroundView"
    android:padding="@dimen/margin_micro_plus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/margin_mini">
        <ImageView
            android:id="@+id/iv_db_product"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginStart="@dimen/margin_mini"
            android:layout_marginEnd="@dimen/margin_mini"
            android:background="@drawable/user_image_border"/>

        <LinearLayout
            android:id="@+id/ll_db_products_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_marginStart="@dimen/margin_mini"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_db_product"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.myshop.utils.MSPTextViewBold
                android:id="@+id/tv_db_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:textSize="24sp"
                android:layout_marginBottom="@dimen/margin_micro_plus"/>

            <com.example.myshop.utils.MSPTextView
                android:id="@+id/tv_db_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 1200"
                android:layout_marginBottom="@dimen/margin_micro_plus"
                android:textSize="20sp"/>
            <com.example.myshop.utils.MSPTextView
                android:id="@+id/tv_db_product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product price"
                android:textSize="18sp"/>
        </LinearLayout>


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>